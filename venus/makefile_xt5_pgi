#FFLAGS	     = -traceback -C -r8 -O3 -xT -I$(M) -module $(M)
# -convert big_endian

FUTILS      = ./futils/src

FUFLAGS     = -I$(FUTILS) -I$(HDF5)/lib -I$(HDF5)/include
#FUFLAGS     = -I$(FUTILS) $(HDF5_INCLUDE_OPTS)

LDFLAGS = -L$(FUTILS) -L$(HDF5)/lib -fastsse
