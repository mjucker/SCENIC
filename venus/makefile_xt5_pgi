# -- Executable File
# -------------------------------------------------------------------------

X_FILES     =                                 \
	 venus.x

# -------------------------------------------------------------------------
# -- Default Rules and Suffixes
# -------------------------------------------------------------------------

.SUFFIXES:

# -------------------------------------------------------------------------
# -- Dependency Rules and Explicit Dependencies
# -------------------------------------------------------------------------

all: FIRST_ACTION \
     $(X_FILES)   \
     LAST_ACTION

$(X_FILES): dirs $(O_FILES)
#	@echo " ### LINKING $@... ###"
	$(FC) $(FFLAGS) $(LDFLAGS) $(I_PATH) -o $@ $(O_FILES) $(EXT_O_FILES) ./interpos/interpos.o $(LIBS)

clean:
#	@echo " ### CLEANING UP... ###"
	rm -f $(X_FILES) core a.out $(X)/core $(X)/a.out
	rm -f $(O_FILES)
	rm -f $(M_FILES)
	rm -f $(M)/*
	cp infnan/inf_nan_detection.mod $(M)/
	cp interpos/*.mod $(M)/
	cp interpos/interpos.o $(B)/
	rm -rf $(L)
#	@echo " ### DONE ###"

dirs:
#	mkdir -p $(B) $(L) $(X)

FIRST_ACTION:
#	@echo " #############################"
#	@echo " ### UPDATING $(X_FILES)"
#	@echo " #############################"

LAST_ACTION:
#	@echo " #############"
#	@echo " ### DONE. ###"
#	@echo " #############"


$(O_FILES):
#	@echo " "
#	@echo " ### COMPILING $(S)/$(@F:.o=.f) ###"
	$(FC) $(FFLAGS) $(FUFLAGS)  -c -o $@ $(S)/$(@F:.o=.f)
